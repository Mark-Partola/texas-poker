{
  "compilerOptions": {
    "target": "es6",
    "removeComments": true,
    "strict": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "inlineSources": true,
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "moduleResolution": "Node",
    "lib": ["dom", "esnext"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
